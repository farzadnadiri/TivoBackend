@using NonFactors.Mvc.Grid
@model IQueryable<App.Entities.Event>
@{
    ViewData["Title"] = "گزارش رویدادها";
}

<div class="card">


    @(Html
        .Grid(Model)
        .Build(columns =>
        {

            columns.Add(model => model.Type).Titled("نوع رویداد");
            columns.Add(model => model.Car.Plate).Titled("پلاک خودرو");
            columns.Add(model => model.Time).Titled("زمان");

        })
        .Using(GridFilterMode.Header)
        .Empty("هیچ آیتمی یافت نشد")
        .Filterable()
        .Sortable()
        .Pageable()
        )

</div>